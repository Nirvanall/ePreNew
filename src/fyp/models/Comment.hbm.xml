<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="fyp.models.Comment" table="Comments">
		<id name="id" column="id" type="integer">
			<generator class="native"/>
		</id>
		<property name="createTime" type="java.sql.Date" insert="false" update="false" generated="insert" >
			<column name="create_time" sql-type="DATETIME" not-null="true" />
		</property>
		<property name="updateTime" type="java.sql.Date" insert="false" update="false" generated="always" >
			<column name="update_time" sql-type="DATETIME" not-null="true" />
		</property>
		<!-- property name="userId" column="user_id" type="integer" not-null="true" / -->
		<!-- property name="videoId" column="video_id" type="integer" not-null="true" / -->
		<many-to-one name="commenter" class="fyp.models.User" column="user_id" cascade="save-update" fetch="select" not-null="true" />
		<many-to-one name="video" class="fyp.models.Video" column="video_id" cascade="save-update" fetch="select" not-null="true" />
		<property name="playtime" column="playtime" type="float" not-null="true" />
		<property name="content" column="content" type="string" not-null="true" length="4096"/>
	</class>
</hibernate-mapping>