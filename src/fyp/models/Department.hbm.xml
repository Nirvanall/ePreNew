<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="fyp.models.Department" table="Departments" >
		<id name="id" column="id" type="byte">
			<generator class="native"/>
		</id>
		<property name="createTime" type="java.sql.Date" insert="false" update="false" generated="insert" >
			<column name="create_time" sql-type="DATETIME" not-null="true" />
		</property>
		<property name="updateTime" type="java.sql.Date" insert="false" update="false" generated="always" >
			<column name="update_time" sql-type="DATETIME" not-null="true" />
		</property>
		<property name="abbreviation" column="abbreviation" type="string" not-null="true" unique="true" length="4"/>
		<property name="name" column="name" type="string" not-null="true" unique="true" length="64"/>
	</class>
</hibernate-mapping>