<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="fyp.models.Video" table="Videos" >
		<id name="id" column="id" type="java.lang.Byte">
			<generator class="native"/>
		</id>
		<property name="createTime" type="java.sql.Date" insert="false" update="false" generated="insert" >
			<column name="create_time" sql-type="DATETIME" not-null="true" />
		</property>
		<property name="updateTime" type="java.sql.Date" insert="false" update="false" generated="always" >
			<column name="update_time" sql-type="DATETIME" not-null="true" />
		</property>
		<!-- property name="presentationId" column="presentation_id" type="java.lang.Integer" not-null="true" />
		<property name="userId" column="user_id" type="java.lang.Integer" not-null="true" / -->
		<many-to-one name="presentation" class="fyp.models.Presentation" column="presentation_id" cascade="save-update" fetch="select" not-null="true" />
		<many-to-one name="owner" class="fyp.models.User" column="user_id" cascade="save-update" fetch="select" not-null="true" />
		<property name="name" column="name" type="java.lang.String" not-null="true" length="32"/>
		<property name="info" column="info" type="java.lang.String" length="256"/>
	</class>
</hibernate-mapping>