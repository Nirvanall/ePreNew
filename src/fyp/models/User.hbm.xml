<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="fyp.models.User" table="Accounts">
		<id name="id" column="id" type="java.lang.Integer">
			<generator class="native"/>
		</id>
		<property name="createTime" type="java.sql.Date" insert="false" update="false" generated="insert" >
			<column name="create_time" sql-type="DATETIME" not-null="true" />
		</property>
		<property name="updateTime" type="java.sql.Date" insert="false" update="false" generated="always" >
			<column name="update_time" sql-type="DATETIME" not-null="true" />
		</property>
		<property name="userId" column="user_id" type="java.lang.String" not-null="true" unique="true" length="20"/>
		<property name="name" column="name" type="java.lang.String" not-null="true" length="64"/>
		<property name="password" column="password" type="java.lang.String" not-null="true" length="64"/>
		<property name="departmentId" column="department_id" type="java.lang.Byte" not-null="true"/>
		<property name="category" column="category" type="java.lang.Byte" not-null="true"/>
	</class>
</hibernate-mapping>